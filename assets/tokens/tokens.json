{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WDI Design Tokens",
  "description": "Machine-readable design tokens for WDI projects. Use tokens.css for CSS implementation.",
  "version": "1.0.0",
  "spacing": {
    "description": "Spacing scale based on 4px unit",
    "unit": "rem",
    "scale": {
      "0": "0",
      "0.5": "0.125rem",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },
    "semantic": {
      "none": "0",
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem"
    }
  },
  "typography": {
    "fontSize": {
      "xs": { "value": "0.75rem", "px": 12, "use": "captions, labels, timestamps" },
      "sm": { "value": "0.875rem", "px": 14, "use": "secondary text, descriptions" },
      "base": { "value": "1rem", "px": 16, "use": "body text" },
      "lg": { "value": "1.125rem", "px": 18, "use": "lead paragraphs" },
      "xl": { "value": "1.25rem", "px": 20, "use": "h4, section headings" },
      "2xl": { "value": "1.5rem", "px": 24, "use": "h3" },
      "3xl": { "value": "1.875rem", "px": 30, "use": "h2" },
      "4xl": { "value": "2.25rem", "px": 36, "use": "h1, page titles" },
      "5xl": { "value": "3rem", "px": 48, "use": "display, hero text" }
    },
    "lineHeight": {
      "none": 1,
      "tight": 1.25,
      "snug": 1.375,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },
    "fontWeight": {
      "thin": 100,
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800,
      "black": 900
    }
  },
  "icons": {
    "description": "Icon size scale",
    "sizes": {
      "xs": { "value": "0.75rem", "px": 12, "use": "inline with small text" },
      "sm": { "value": "1rem", "px": 16, "use": "inline with body text, small buttons" },
      "md": { "value": "1.25rem", "px": 20, "use": "buttons, inputs" },
      "lg": { "value": "1.5rem", "px": 24, "use": "standalone, navigation" },
      "xl": { "value": "2rem", "px": 32, "use": "empty states, illustrations" },
      "2xl": { "value": "3rem", "px": 48, "use": "hero sections, major callouts" }
    }
  },
  "radius": {
    "description": "Border radius scale, derived from theme --radius",
    "sm": "calc(var(--radius) - 4px)",
    "md": "calc(var(--radius) - 2px)",
    "lg": "var(--radius)",
    "xl": "calc(var(--radius) + 4px)",
    "2xl": "calc(var(--radius) + 8px)",
    "full": "9999px"
  },
  "transitions": {
    "duration": {
      "75": "75ms",
      "100": "100ms",
      "150": "150ms",
      "200": "200ms",
      "300": "300ms",
      "500": "500ms",
      "700": "700ms",
      "1000": "1000ms"
    },
    "easing": {
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "in-out": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.34, 1.56, 0.64, 1)",
      "smooth": "cubic-bezier(0.22, 1, 0.36, 1)"
    }
  },
  "themes": {
    "precision": {
      "name": "Precision",
      "description": "Linear, Raycast - Tight spacing, monochrome, information-forward",
      "category": "minimal",
      "radius": "6px",
      "colors": {
        "background": "#0a0a0a",
        "foreground": "#fafafa",
        "card": "#141414",
        "cardForeground": "#fafafa",
        "primary": "#fafafa",
        "primaryForeground": "#0a0a0a",
        "secondary": "#1f1f1f",
        "secondaryForeground": "#a1a1a1",
        "muted": "#1f1f1f",
        "mutedForeground": "#737373",
        "accent": "#3b82f6",
        "accentForeground": "#fafafa",
        "success": "#22c55e",
        "warning": "#eab308",
        "destructive": "#ef4444",
        "border": "#262626",
        "ring": "#3b82f6"
      },
      "charts": ["#3b82f6", "#8b5cf6", "#22c55e", "#f59e0b", "#ec4899"],
      "depth": "borders"
    },
    "warmth": {
      "name": "Warmth",
      "description": "Notion, Coda - Generous spacing, soft shadows, friendly colors",
      "category": "minimal",
      "radius": "8px",
      "colors": {
        "background": "#ffffff",
        "foreground": "#37352f",
        "card": "#ffffff",
        "cardForeground": "#37352f",
        "primary": "#2383e2",
        "primaryForeground": "#ffffff",
        "secondary": "#f7f6f3",
        "secondaryForeground": "#6b7280",
        "muted": "#f7f6f3",
        "mutedForeground": "#9b9a97",
        "accent": "#eb5757",
        "accentForeground": "#ffffff",
        "success": "#6fcf97",
        "warning": "#f2c94c",
        "destructive": "#eb5757",
        "border": "#e9e9e7",
        "ring": "#2383e2"
      },
      "charts": ["#2383e2", "#eb5757", "#6fcf97", "#f2c94c", "#9b51e0"],
      "depth": "shadows"
    },
    "sophistication": {
      "name": "Sophistication",
      "description": "Stripe, Mercury - Cool tones, layered depth, financial gravitas",
      "category": "minimal",
      "radius": "8px",
      "colors": {
        "background": "#f6f9fc",
        "foreground": "#0a2540",
        "card": "#ffffff",
        "cardForeground": "#0a2540",
        "primary": "#635bff",
        "primaryForeground": "#ffffff",
        "secondary": "#f0f2f5",
        "secondaryForeground": "#425466",
        "muted": "#e3e8ee",
        "mutedForeground": "#697386",
        "accent": "#00d4ff",
        "accentForeground": "#0a2540",
        "success": "#30d158",
        "warning": "#f5a623",
        "destructive": "#ff3b30",
        "border": "#e3e8ee",
        "ring": "#635bff"
      },
      "charts": ["#635bff", "#00d4ff", "#30d158", "#f5a623", "#ff6b6b"],
      "depth": "layered-shadows"
    },
    "boldness": {
      "name": "Boldness",
      "description": "Vercel - High contrast, dramatic negative space, confident typography",
      "category": "minimal",
      "radius": "6px",
      "colors": {
        "background": "#000000",
        "foreground": "#ededed",
        "card": "#0a0a0a",
        "cardForeground": "#ededed",
        "primary": "#ffffff",
        "primaryForeground": "#000000",
        "secondary": "#1a1a1a",
        "secondaryForeground": "#888888",
        "muted": "#1a1a1a",
        "mutedForeground": "#666666",
        "accent": "#0070f3",
        "accentForeground": "#ffffff",
        "success": "#50e3c2",
        "warning": "#f5a623",
        "destructive": "#ee0000",
        "border": "#333333",
        "ring": "#ffffff"
      },
      "charts": ["#0070f3", "#50e3c2", "#7928ca", "#f5a623", "#ff0080"],
      "depth": "borders"
    },
    "utility": {
      "name": "Utility",
      "description": "GitHub - Muted palette, functional density, clear hierarchy",
      "category": "minimal",
      "radius": "6px",
      "colors": {
        "background": "#ffffff",
        "foreground": "#1f2328",
        "card": "#ffffff",
        "cardForeground": "#1f2328",
        "primary": "#0969da",
        "primaryForeground": "#ffffff",
        "secondary": "#f6f8fa",
        "secondaryForeground": "#656d76",
        "muted": "#f6f8fa",
        "mutedForeground": "#656d76",
        "accent": "#0969da",
        "accentForeground": "#ffffff",
        "success": "#1a7f37",
        "warning": "#9a6700",
        "destructive": "#cf222e",
        "border": "#d0d7de",
        "ring": "#0969da"
      },
      "charts": ["#0969da", "#8250df", "#1a7f37", "#bf8700", "#cf222e"],
      "depth": "borders-and-shadows"
    },
    "data": {
      "name": "Data",
      "description": "BI/Analytics - Chart-optimized, technical but accessible",
      "category": "minimal",
      "radius": "4px",
      "colors": {
        "background": "#f8fafc",
        "foreground": "#0f172a",
        "card": "#ffffff",
        "cardForeground": "#0f172a",
        "primary": "#3b82f6",
        "primaryForeground": "#ffffff",
        "secondary": "#f1f5f9",
        "secondaryForeground": "#475569",
        "muted": "#f1f5f9",
        "mutedForeground": "#64748b",
        "accent": "#10b981",
        "accentForeground": "#ffffff",
        "success": "#10b981",
        "warning": "#f59e0b",
        "destructive": "#ef4444",
        "border": "#e2e8f0",
        "ring": "#3b82f6"
      },
      "charts": ["#3b82f6", "#10b981", "#f59e0b", "#8b5cf6", "#ef4444"],
      "depth": "subtle-shadows"
    }
  },
  "accessibility": {
    "target": "WCAG 2.1 AA",
    "contrast": {
      "text": "4.5:1 minimum",
      "largeText": "3:1 minimum",
      "ui": "3:1 minimum"
    },
    "focus": {
      "style": "2px solid var(--ring)",
      "offset": "2px"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
}
